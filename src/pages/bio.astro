---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About - Randyman">
  
  <section class="relative py-24 px-6 overflow-hidden">
    <!-- Subtle background glows -->
    <div class="absolute top-0 right-0 w-[500px] h-[500px] glow-purple"></div>
    <div class="absolute bottom-0 left-0 w-[400px] h-[400px] glow-blue"></div>
    
    <div class="relative z-10 max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-6">About Me</h1>
      

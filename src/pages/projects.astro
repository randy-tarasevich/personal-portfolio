---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort(
  (a, b) => a.data.order - b.data.order
);

const accentMap = {
  blue: {
    border: 'hover:border-accent-blue/30',
    title: 'group-hover:text-accent-blue',
    pill: 'bg-accent-blue/10 text-accent-blue',
  },
  pink: {
    border: 'hover:border-accent-pink/30',
    title: 'group-hover:text-accent-pink',
    pill: 'bg-accent-pink/10 text-accent-pink',
  },
  purple: {
    border: 'hover:border-accent-purple/30',
    title: 'group-hover:text-accent-purple',
    pill: 'bg-accent-purple/10 text-accent-purple',
  },
};
---

<BaseLayout title="Projects - Randyman">
  
  <section class="relative py-24 px-6 overflow-hidden">
    <div class="absolute top-20 left-10 w-[400px] h-[400px] glow-blue"></div>
    <div class="absolute bottom-20 right-10 w-[500px] h-[500px] glow-purple"></div>
    
    <div class="relative z-10 max-w-6xl mx-auto">
      <div class="mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">Projects</h1>
        <p class="text-xl text-text-secondary">From AI-powered tools to custom websites and applications.</p>
      </div>
      
      <div class="grid gap-6">
        
        {projects.map((project) => {
          const accent = project.data.accent ?? 'blue';
          const styles = accentMap[accent];
          const isLink = !!project.data.href;
          const cardClass = isLink
            ? `group block p-6 rounded-xl border border-border-subtle bg-bg-secondary/30 hover:bg-bg-secondary/60 ${styles.border} transition-all`
            : 'group block p-6 rounded-xl border border-border-subtle bg-bg-secondary/30';
          const titleClass = isLink ? `text-xl font-semibold text-text-primary ${styles.title} transition-colors` : 'text-xl font-semibold text-text-primary';
          return (
            isLink ? (
              <a href={project.data.href} target="_blank" rel="noopener noreferrer" class={cardClass}>
                <div class="flex flex-col md:flex-row md:items-center gap-6">
                  <div class="w-full md:w-40 h-28 md:h-24 rounded-xl overflow-hidden bg-bg-tertiary flex-shrink-0 border border-border-subtle flex items-center justify-center">
                    {project.data.imagePlaceholder ? (
                      <span class="text-sm font-medium text-text-secondary">{project.data.imagePlaceholder}</span>
                    ) : (
                      <img src={project.data.image} alt={`${project.data.title} screenshot`} class="w-full h-full object-cover" width="160" height="96" loading="lazy" />
                    )}
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                      <h3 class={titleClass}>{project.data.title}</h3>
                      <span class={`text-xs px-2 py-1 rounded-full ${styles.pill}`}>{project.data.status}</span>
                    </div>
                    <p class="text-text-secondary mb-3">{project.data.description}</p>
                    <div class="flex flex-wrap gap-2">
                      {project.data.tags.map((tag) => (
                        <span class="text-xs px-2 py-1 rounded bg-bg-tertiary text-text-secondary">{tag}</span>
                      ))}
                    </div>
                  </div>
                </div>
              </a>
            ) : (
              <div class={cardClass}>
                <div class="flex flex-col md:flex-row md:items-center gap-6">
                  <div class="w-full md:w-40 h-28 md:h-24 rounded-xl overflow-hidden bg-bg-tertiary flex-shrink-0 border border-border-subtle flex items-center justify-center">
                    {project.data.imagePlaceholder ? (
                      <span class="text-sm font-medium text-text-secondary">{project.data.imagePlaceholder}</span>
                    ) : (
                      <img src={project.data.image} alt={`${project.data.title} screenshot`} class="w-full h-full object-cover" width="160" height="96" loading="lazy" />
                    )}
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                      <h3 class={titleClass}>{project.data.title}</h3>
                      <span class={`text-xs px-2 py-1 rounded-full ${styles.pill}`}>{project.data.status}</span>
                    </div>
                    <p class="text-text-secondary mb-3">{project.data.description}</p>
                    <div class="flex flex-wrap gap-2">
                      {project.data.tags.map((tag) => (
                        <span class="text-xs px-2 py-1 rounded bg-bg-tertiary text-text-secondary">{tag}</span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            )
          );
        })}
        
      </div>
    </div>
  </section>

</BaseLayout>
